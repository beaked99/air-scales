{# templates/app/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Air Scales - Smart Axle Weight Monitoring{% endblock %}

{% block stylesheets %}
  <link rel="manifest" href="/app/manifest.webmanifest">
  <link rel="icon" href="/app/icon-192.png">
  <link rel="apple-touch-icon" href="/app/icon-192.png">
  <meta name="theme-color" content="#1f2937">
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  {{ parent() }}
{% endblock %}

{% block body %}
<div class="min-h-screen text-gray-100 bg-gray-900">
  <main class="relative">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900"></div>
    <div class="relative px-4">
      <div class="max-w-2xl pt-10 pb-16 mx-auto text-center sm:pt-20 sm:pb-32">
        <div class="mb-6">
          <div class="flex items-center justify-center w-12 h-12 mx-auto bg-green-600 rounded-xl">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
        </div>

        <h1 class="text-[clamp(1.5rem,5vw,2.5rem)] font-bold tracking-tight text-white">
          Monitor Your <span class="text-green-400">Axle Weights</span> in Real Time
        </h1>

        <p class="mt-4 text-[clamp(1rem,3vw,1.125rem)] text-gray-300 leading-relaxed max-w-sm mx-auto">
          Install the hardware and app. Sync and calibrate. Drive smarter with live weight monitoring on your truck or trailer from your phone.
        </p>

        <div class="flex flex-col items-center justify-center mt-8 gap-y-4 sm:flex-row sm:gap-x-6">
          {% if app.user is defined and app.user %}
            <p class="text-sm text-gray-400">Welcome back, <span class="text-green-400">{{ app.user.email }}</span></p>
            <a href="{{ path('app_dashboard') }}" class="px-6 py-3 text-base font-semibold text-white bg-green-600 rounded-md shadow-sm hover:bg-green-500">
              ðŸ“Š Go to Dashboard
            </a>
          {% else %}
            <a href="{{ path('app_register') }}" class="px-6 py-3 text-base font-semibold text-white bg-green-600 rounded-md shadow-sm hover:bg-green-500">
              Create Account
            </a>
            <a href="{{ path('app_login') }}" class="px-6 py-3 text-base font-semibold text-white bg-gray-800 rounded-md hover:bg-gray-700 ring-1 ring-gray-600">
              Sign In
            </a>
          {% endif %}
        </div>

        <div id="installPrompt" class="hidden mt-6">
          <button id="installApp" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md shadow-sm hover:bg-blue-500">
            ðŸ“± Install App
          </button>
          <p class="mt-2 text-xs text-gray-400">Install for offline access and notifications</p>
        </div>

        <div id="browserWarning" class="hidden mt-6">
          <div class="p-4 bg-yellow-900 rounded-md">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-200">Browser Compatibility</h3>
                <p id="warningMessage" class="mt-1 text-sm text-yellow-300"></p>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </main>

  <footer class="py-10 text-sm text-center text-gray-400 bg-gray-800">
    Version: {{ app_version|default('dev') }} |
    Build: {{ build_date|default('now'|date('Y-m-d')) }}
    {% if not app.user %}
      <div class="mt-2 space-x-4">
        <a href="{{ path('app_register') }}" class="hover:text-white">Create Account</a>
        <a href="{{ path('app_login') }}" class="hover:text-white">Sign In</a>
      </div>
    {% endif %}
  </footer>
</div>

<script>
let deferredPrompt;
window.addEventListener('beforeinstallprompt', (e) => {
  e.preventDefault();
  deferredPrompt = e;
  document.getElementById('installPrompt').classList.remove('hidden');
});

document.getElementById('installApp')?.addEventListener('click', async () => {
  if (deferredPrompt) {
    deferredPrompt.prompt();
    const { outcome } = await deferredPrompt.userChoice;
    console.log(`User response to the install prompt: ${outcome}`);
    deferredPrompt = null;
    document.getElementById('installPrompt').classList.add('hidden');
  }
});

function checkBrowserSupport() {
  const warnings = [];
  if (!('bluetooth' in navigator)) warnings.push('Bluetooth Web API not supported');
  if (!('serviceWorker' in navigator)) warnings.push('Service Workers not supported');
  if (!('indexedDB' in window)) warnings.push('IndexedDB not supported');
  if (warnings.length > 0) {
    document.getElementById('browserWarning').classList.remove('hidden');
    document.getElementById('warningMessage').textContent = warnings.join('. ');
  }
}

document.addEventListener('DOMContentLoaded', () => {
  checkBrowserSupport();
});
</script>
{% endblock %}
